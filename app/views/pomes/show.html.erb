<body style="background-color:	#FFCCFF;">
  <div class="album py-5" style="background-color:	#FFCCFF;">
    <div class="container">
      <div class="row">
      <div class="center">
        <div class="col-md-7">
          <div class="card mb-4 shadow-sm">
            <%= image_tag @pomes.image, class: "card-img-top" %>
            <div class="card-body">
              <p class="card-text"><%= @pomes.name %></p>
               <p class="card-text"><%= @pomes.writings %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">                                  
                  <% if user_signed_in? && current_user.id == @pomes.user.id%>
                  <%= link_to '編集', edit_pome_path, type:"button", class:"btn btn-sm btn-outline-secondary" %>
                  <%= link_to '削除', pome_path, method: :delete,type:"button", class:"btn btn-sm btn-outline-secondary" %>
                  <% end %>
                </div>
                <a href="/users/<%= @pomes.user.id %>">
                  <small class="text-muted"><%= @pomes.user[:name] %></small>
                </a>
              </div>
            </div>
          </div>
            <%= link_to "TOPへ戻る", root_path,method: :get %>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>
</body>