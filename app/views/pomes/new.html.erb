<body style="background-color:	#FFCCFF;">
<div class="form-style">
<h1>新規投稿</h1>
<%= form_with(model: @pomes, local: true) do |f| %>
<%= render 'shared/error_messages', model: f.object %>
  <div class="form-group">
    <%= f.label :タイトル%>
    <%= f.text_field :name, autofocus: true, autocomplete: 'name', class: 'form-control' %>
  </div>

  <div class="form-group">
    <div>
    <%= f.label :画像 %>
    </div>
    <%= f.file_field :image, autocomplete: 'current-password' %>
  </div>

  <div class="form-group">
    <%= f.label :ポメの色 %>
    <%= f.collection_select(:color_pome, Genre.all, :name, :name, {}, {autofocus: true, autocomplete: 'genre_id', class: 'form-control'}) %>
  </div>
 
 <div class="form-group">
    <%= f.label :コメント%>
    <%= f.text_area :writings, autofocus: true, autocomplete: 'writings', class: 'form-control', rows: "10" %>
  </div>

  <div class="form-group">
    <%= f.submit  '投稿する', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to "TOPへ戻る", root_path,method: :get %>
<%# render 'devise/shared/links' %>

</div>
</body>